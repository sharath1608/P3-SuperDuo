<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_list_view_item"
    android:layout_width="250dp"
    android:layout_marginBottom="30dp"
    android:layout_height="120dp">

    <LinearLayout
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <RelativeLayout
        android:baselineAligned="false"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <RelativeLayout
            android:id="@+id/widget_home_layout"
            android:layout_width="80dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_height="wrap_content"
            android:gravity="start">
            <TextView
                android:id="@+id/widget_team1_name"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:contentDescription="@string/home_team_image"
                android:layout_below="@+id/widget_team1_name"
                android:layout_alignLeft="@+id/widget_team1_name"
                android:layout_alignStart="@+id/widget_team1_name"
                android:layout_marginTop="5dp"
                android:id="@+id/widget_team1_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/widget_scores_layout"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/widget_home_layout"
            android:layout_toEndOf="@+id/widget_home_layout"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/widget_score_text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="2dp"
                android:layout_alignLeft="@+id/widget_score_text"
                android:layout_alignStart="@+id/widget_score_text"
                android:layout_gravity="center"
                android:layout_below="@+id/widget_score_text"
                android:gravity="center"
                android:id="@+id/widget_time_text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/widget_time_text"
                android:layout_alignStart="@id/widget_time_text"
                android:layout_alignLeft="@id/widget_time_text"
                android:textColor="@color/black"
                android:id="@+id/widget_match_day"
                android:layout_marginTop="2dp"
                android:gravity="center"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="80dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="end"
            android:layout_toEndOf="@+id/widget_scores_layout"
            android:layout_toRightOf="@+id/widget_scores_layout"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/widget_team2_name"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:contentDescription="@string/away_team_tag"
                android:id="@+id/widget_team2_image"
                android:layout_below="@+id/widget_team2_name"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>